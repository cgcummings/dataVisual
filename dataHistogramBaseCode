TCanvas* c_1 = new Tcanvas("c_1" , "2D histogram" , 500,0, 500,800);
c_1->Divide(1,2);
c_1->cd(1);
TH2C* htwoD = new TH2C("htwoD" , "a 2D histogram" , 100,-2, 2,
                       100, -2, 2);

for(int i=0; i<10000; i++) { htwoD->Fill( gRandom->Gaus(-0.5,0.1),gRandom->Gaus(-.05,0.1));
    htwoD->Fill( gRandom->Gaus(0.2,0.2), gRandom->Gaus(1.4,0.2));
}
htwoD->Draw("colz");
